              smtpHost="smtp.ukr.net" smtpPort="465" smtpUsername="ivan.stefanyuk250@ukr.net" smtpPassword="ihNNnaREtc201kis"
              smtpProtocol="smtps"
              bufferSize="50">
        </SMTP>
        <File name="file"
              append="true"
              fileName="logs.log">
            <PatternLayout
                    pattern="[%-level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n"/>
